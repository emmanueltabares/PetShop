@using PetShop.ViewModel;
@model ProductViewModel;

@{
    ViewData["Title"] = "Index";
}
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            color: #fff;
            padding: 10px;
        }

        .header {
            text-align: right;
        }

        .container {
            
            margin: 0 auto;
            padding: 10px;
        }

        h1 {
            text-align: center;
            margin-bottom: 15px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin: -15px;
        }

        .col-md-4 {
            flex: 0 0 33.33%;
            max-width: 33.33%;
            padding: 15px;
        }

        .card {
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
        }

        .card-img-top {
            max-width: 100%;
            height: auto;
        }

        .card-title {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .card-text {
            margin-bottom: 10px;
        }

        .card-price {
            font-size: 18px;
            color: #007bff;
            margin-top: 5px;
        }

        .btn {
            margin-top: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-success {
            color: #fff;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-danger {
            color: #fff;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #053e7a;
            border-color: #053e7a;
        }

        .btn-success:hover {
            background-color: #0a3b1f;
            border-color: #0a3b1f;
        }

        .btn-danger:hover {
            background-color: #5e1c1c;
            border-color: #5e1c1c;
        }

        .search-form {
            display: flex;
            align-items: center;
        }

        .search-input {
            margin-right: 10px;
        }

        .search-btn {
            margin-left: 10px;
        }

        .btn-add-product {
            display: inline-block;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
        }
        

    </style>

    <body>
        
        <div class="container">

        <div class="container">
            <form class="search-form" method="get" asp-action="Index" asp-controller="Product" >
                <div class="form">
                    <input type="text" class="form-control search-input" asp-for="Filter" placeholder="Producto">
                </div>
                <button type="submit" class="btn btn-primary btn-sm search-btn">Buscar</button>
                @if(User.IsInRole("Administrator")) { 
                <div class="container header">
                    <a asp-action="Create" class="btn btn-primary btn-add-product">Agregar un producto</a>
                </div>
            }
            </form>

        </div>

        <div class="container">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4">
                        <div class="card">
                            @* <img src="@producto." class="card-img-top" alt="@producto.Nombre"> *@
                            <div class="card-body">
                                <h2 class="card-title">@Html.DisplayFor(modelItem => product.Make)</h2>
                                <h3 class="card-text">@Html.DisplayFor(modelItem => product.Name)</h3>
                                <div class="card-price">$@Html.DisplayFor(modelItem => product.Price)</div>
                                <p class="product-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam aliquam turpis sit amet justo malesuada, id fermentum risus lacinia.</p>
                                <div class="product-buttons">

                                    <form asp-controller="Carrito" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit">Agregar al carrito</button>
                                    </form>
                                    
                                    @if(User.IsInRole("Administrator")) {
                                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@product.Id">Editar</a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Eliminar</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

