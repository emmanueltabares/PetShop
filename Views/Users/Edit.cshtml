@using Microsoft.AspNetCore.Identity;
@using PetShop.ViewModel;
@model UserEditViewModel

    <style>
        .edit-product-form {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-group {
            margin-top: 10px;
        }

        .form-group label {
            font-weight: bold;
            font-size: 16px;
            font-family: Arial, sans-serif;
        }

        .form-group input[type="text"],
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            font-family: Arial, sans-serif;
        }

        .form-group .btn {
            display: inline-block;
            margin-top: 10px;
            font-size: 16px;
            font-family: Arial, sans-serif;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }
    </style>

        <div class="container">
        <div class="edit-product-form">
            <h2 style="font-family: Arial, sans-serif;">Editar Usuario</h2>
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Nombre de usuario</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                    <div class="form-group">
                    <label asp-for="Phone" class="control-label">Tel√©fono</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rol" class="control-label">Rol</label>
                    <select asp-for="Rol" asp-items="Model.Roles">
                        <option>Ninguno</option>
                    </select>
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" value="Volver" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}